<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itheima.dao.OrdersettingDao">

    <select id="findOrderSettingByDate" parameterType="java.util.Date" resultType="orderSetting">
        select * from t_ordersetting where orderDate = #{value}
    </select>

    <select id="findByDate" resultType="orderSetting">
        select * from t_ordersetting where orderDate between #{start}  and #{end}
    </select>

    <insert id="add" parameterType="orderSetting">
        insert into t_ordersetting (orderDate,number,reservations)
        values(#{orderDate},#{number},#{reservations})
    </insert>

    <update id="updata" parameterType="orderSetting">
        update t_ordersetting set number=#{number} where orderDate =#{orderDate}
    </update>

    <update id="updataReservations" parameterType="orderSetting">
        update t_ordersetting set reservations = #{reservations} where orderDate = #{orderDate}
    </update>

    <!--编辑-->
    <update id="editNumberByOrderDate" parameterType="com.itheima.pojo.OrderSetting">
        update t_ordersetting set number = #{number} where orderDate = #{orderDate}
    </update>
    <!--更新已预约人数-->
    <update id="editReservationsByOrderDate" parameterType="com.itheima.pojo.OrderSetting">
        update t_ordersetting set reservations = #{reservations} where orderDate = #{orderDate}
    </update>
    <update id="addReservationsByOrderDate" parameterType="com.itheima.pojo.OrderSetting">
        update t_ordersetting set reservations = reservations+1 where orderDate = #{orderDate}
    </update>
    <!--根据预约日期查询-->
    <select id="findCountByOrderDate" parameterType="java.util.Date" resultType="long">
        select count(*) from t_ordersetting where orderDate = #{orderDate}
    </select>
    <!--根据月份查询预约设置信息-->
    <select id="getOrderSettingByMonth" parameterType="hashmap" resultType="com.itheima.pojo.OrderSetting">
        select * from t_ordersetting where orderDate between #{dateBegin} and #{dateEnd}
    </select>

    <!--根据日期查询预约设置信息-->
    <select id="findByOrderDate" parameterType="date" resultType="com.itheima.pojo.OrderSetting">
        select * from t_ordersetting where orderDate = #{orderDate}
    </select>
</mapper>